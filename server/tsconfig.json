{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["ES2023"],
    "paths": {
      "@/*": ["./src/*"],
      "@shared-types/*": ["../shared-types/*"]
    }
  },
  "include": ["src", "../shared-types"]
}
